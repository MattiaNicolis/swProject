{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Main (Avvia App)",
            "request": "launch",
            "mainClass": "application.Main",
            "vmArgs": "--module-path \"${workspaceFolder}/lib\" --add-modules javafx.controls,javafx.fxml --enable-native-access=javafx.graphics -Djava.library.path=\"${workspaceFolder}/lib\""
        },
        {
            "type": "java",
            "name": "JUnit (Tutti i Test)",
            "request": "launch",
            "mainClass": "org.junit.platform.console.ConsoleLauncher",
            "vmArgs": [
                "--module-path", "${workspaceFolder}/lib",
                "--add-modules", "javafx.controls,javafx.fxml",
                "-Djava.library.path=${workspaceFolder}/lib"
            ],
            "args": [
                "--class-path", "${workspaceFolder}/bin;${workspaceFolder}/lib/test/junit-platform-console-standalone-1.13.0-M3.jar",
                "--scan-class-path"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}