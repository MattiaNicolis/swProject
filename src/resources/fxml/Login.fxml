<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" stylesheets="@../css/LoginPage.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
    
    <center>
        <VBox alignment="CENTER" maxWidth="340.0" minWidth="300.0" spacing="25.0" stylesheets="@../css/LoginPage.css" BorderPane.alignment="CENTER">

            <Label fx:id="firstLabel" stylesheets="@../css/LoginPage.css" text="Bentornato/a!">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>
            
            <TextField fx:id="cfField" promptText="Codice Fiscale" stylesheets="@../css/LoginPage.css" />
            
            <PasswordField fx:id="passwordField" promptText="Password" stylesheets="@../css/LoginPage.css" />
            
            <Button defaultButton="true" maxWidth="1.7976931348623157E308" onAction="#handleLogin" stylesheets="@../css/LoginPage.css" text="Accedi" />

        </VBox>
    </center>
</BorderPane>
